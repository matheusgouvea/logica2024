programa
{
	
	funcao inicio()
	{
		cadeia nome

		escreva("Nome: ")
		leia(nome)

		escreva(mensagem(nome)," ao curso.")
	}

	//Função exibe mensagem que vai retornar uma frase
	funcao cadeia mensagem(cadeia nome){
		retorne "\nBem-vindo(a): "+ nome

	}
}
